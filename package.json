{
  "name": "transcriptor-audio-texto",
  "version": "1.0.0",
  "description": "Transcribe tus audios de forma r√°pida y sencilla usando Whisper AI",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "dev-start": "node scripts/dev-start.js",
    "build-frontend": "cd frontend && npm run build",
    "build-backend": "node scripts/prepare-python.js",
    "build": "npm run build-frontend && npm run build-backend",
    "build-all": "node scripts/build-executable.js",
    "pack": "electron-builder --dir",
    "pack-portable": "node scripts/build-portable.js",
    "create-portable": "node scripts/create-portable.js",
    "fix-paths": "node scripts/fix-html-paths.js",
    "build-complete": "npm run build-frontend && npm run fix-paths && npm run create-portable",
    "dist": "npm run build && electron-builder",
    "dist-win": "npm run build && electron-builder --win",
    "dist-mac": "npm run build && electron-builder --mac",
    "dist-linux": "npm run build && electron-builder --linux",
    "clean": "rimraf build dist python-env frontend/out",
    "setup": "npm install && cd frontend && npm install"
  },
  "author": "Maxcerva12",
  "license": "MIT",
  "dependencies": {
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.maxcerva12.transcriptor",
    "productName": "Transcriptor Audio a Texto",
    "asar": true,
    "compression": "normal",
    "forceCodeSigning": false,
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "main.js",
      "preload.js",
      "loading.html",
      "frontend/out/**/*"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "app/backend"
      },
      {
        "from": "python-env",
        "to": "app/python-env"
      },
      {
        "from": "resources",
        "to": "resources"
      }
    ],
    "directories": {
      "output": "build"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "resources/icon.ico",
      "sign": false,
      "signingHashAlgorithms": [],
      "certificateFile": null,
      "certificatePassword": null,
      "publisherName": "Maxcerva12"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "resources/icon.icns",
      "category": "public.app-category.utility"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "resources/icon.png",
      "category": "Utility"
    }
  }
}
